{% extends '::base.html.twig' %}

{% block title %}Examen de {{ exam.unit }} - {{ parent() }}{% endblock %}

{% block tools %}
    <li>
        <a data-ignore-exam="{{ path('nk_exam_ignore_exam', {unit:exam.unit}) }}">
            <i class="icon i-bin"></i>
            Ignorer
        </a>
    </li>
{% endblock %}

{% block body %}
    <h1>Examen de {{ exam.unit }}</h1>
    <div class="gray-bg">
        <ul class="ul-icon">
            <li>
                <i class="icon i-book"></i>
                {{ exam.realUnit }}
            </li>
            <li>
                <i class="icon i-calendar"></i>
                {{ exam.startAt|countdown }}
            </li>
            <li>
                <i class="icon i-stopwatch"></i>
                {{ exam.length }}
            </li>
            <li>
                <i class="icon i-group"></i>
                {{ exam.groups }}
            </li>
            <li>
                <i class="icon i-google-maps"></i>
                {{ exam.location }}
            </li>
        </ul>
    </div>

    {% if documents|length %}
        <h1>Documents pour réviser</h1>
        {% include 'nkDocumentBundle:Document:list.html.twig' %}
    {% else %}
        <p class="txt-large">Aucun document pour réviser.</p>
    {% endif %}

    {% if folders|length %}
        <h1>Compils pour réviser</h1>
        {% include 'nkFolderBundle:Folder:list.html.twig' %}
    {% endif %}
{% endblock %}