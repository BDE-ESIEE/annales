{% extends '::admin.html.twig' %}

{% block title %}Ressources ADE{% endblock %}

{% block tools %}
    <li>
        <a href="{{ path('nk_exam_admin_new') }}">
            <i class="icon i-circle-plus"></i>
            Ajouter
        </a>
    </li>
{% endblock %}

{% block body %}
    <h1>Ressources ADE</h1>

    <table class="table">
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Ressource</th>
            <th>Actions</th>
        </tr>
        {% for resource in resources %}
            <tr>
                <td>{{ resource.id }}</td>
                <td>{{ resource.name }}</td>
                <td>{{ resource.code }}</td>
                <td>
                    <a href="{{ path('nk_exam_admin_edit', {id:resource.id}) }}" class="btn-icon">
                        <i class="icon i-pencil"></i>
                        Editer
                    </a>
                    <a href="" class="btn-icon">
                        <i class="icon i-remove-2"></i>
                        Supprimer
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}